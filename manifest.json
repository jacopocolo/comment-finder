{
	"content_scripts": [
		{
			"js": [
                "js/detect.js"
            ],
			"matches": [
                "<all_urls>"
            ]
        }
    ],
	"description": "Detect comments in the page source code",
	"icons": {
		"128": "img/icon_128.png"
	},
	"manifest_version": 2,
	"name": "Comment detector",
	"permissions": [
				"http://*/*",
	 			"https://*/*"
    ],
	"short_name": "Comment detector",
	"version": "0.0.1",
			"web_accessible_resources": [
		"css/*"
    		]
}
